.top {
    width: 100%;
    height: 136rpx;
    margin: 0;
    padding: 0;
    position: relative;
}

.contain {
    position: relative;
    width: 100%;
    height: 100%;
    padding-left: 36rpx;
    padding-right: 0;
    box-sizing: border-box;
    display: flex;
    align-items: center;
}

.left {
    flex: 0 0 96rpx;
}

.right {
    flex-basis: auto;
    width: 100%;
    overflow: hidden;
}

.head {
    width: 72rpx;
    height: 72rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f5f5f5;
}

.title {
    width: 578rpx;
    height: 20rpx;
    background: #f5f5f5;
}

.content {
    width: 319rpx;
    height: 20rpx;
    background: #f5f5f5;
    margin-top: 20rpx;
}

.line {
    position: absolute;
    background: transparent;
    left: 132rpx;
    right: 0;
    bottom: 0;
    height: 1rpx;
    pointer-events: none;
}