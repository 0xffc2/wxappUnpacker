.dialog {
    position: fixed;
    z-index: 10;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}

.mask {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,.6);
    z-index: 10;
}

.main {
    position: absolute;
    width: 560rpx;
    background: #fbfbfd;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    z-index: 11;
    padding: 40rpx;
    border-radius: 8rpx;
}

.title {
    font-size: 34rpx;
    font-weight: bold;
}

.target {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 34rpx;
    margin: 30rpx 0;
    color: #363636;
}

.target-logo {
    width: 80rpx;
    height: 80rpx;
    margin-right: 20rpx;
    vertical-align: middle;
}

.filename {
    background: #f5f5f5;
    padding: 15rpx;
}

.filename-box {
    line-height: 1.5;
    color: #888888;
    font-size: 30rpx;
    overflow: hidden;
    word-wrap: break-word;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.footer {
    display: flex;
    flex-direction: row;
    padding: 40rpx 0;
}

.btn-item {
    flex-grow: 1;
}

.btn-item button {
    width: 260rpx;
    height: 80rpx;
    margin: 0 auto;
    text-align: center;
    font-size: 32rpx;
    border-radius: 8rpx;
}

.cancel {
    float: left;
    color: #363636;
    background: #f8f8f8;
    border: 2rpx solid #dfdfdf;
}

.confirm {
    float: right;
    border: 2rpx solid #3692F5;
    background-color: #3692F5;
    color: #fff;
}

.howto {
    text-align: center;
    padding: 8rpx 0 10rpx 0;
    color: #576b95;
    font-size: 30rpx;
}