.add_miniprogram_guide_pointer {
    width: 0;
    height: 0;
    opacity: 0.8;
    right: 128rpx;
    position: fixed;
    top: 0;
    border-left: 8rpx solid transparent;
    border-right: 9rpx solid transparent;
    border-bottom: 12rpx solid rgba(46,104,248,1);
    z-index: 2;
}

.add_miniprogram_guide_text_container {
    z-index: 2;
    width: 290rpx;
    height: 106rpx;
    background: rgba(46,104,248,1);
    opacity: 0.8;
    right: 36rpx;
    position: fixed;
    top: 12rpx;
    border-radius: 4rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
}

.add_miniprogram_guide_text {
    width: 216rpx;
    height: 33rpx;
    margin-left: 24rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(255,255,255,1);
    line-height: 33rpx;
    text-align: center;
    white-space: pre-wrap;
}

.close_btn {
    position: absolute;
    top: 21rpx;
    right: 21rpx;
    width: 18rpx;
    height: 18rpx;
}