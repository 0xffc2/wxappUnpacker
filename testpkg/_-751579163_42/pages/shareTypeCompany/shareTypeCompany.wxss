.title-item {
    height: 180rpx;
    display: flex;
    align-items: center;
}

.title-icon {
    margin-left: 36rpx;
    margin-right: 36rpx;
}

.title-name {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    margin-right: 36rpx;
}

.header {
    width: 100%;
    height: 40rpx;
    background-color: #f5f5f5;
}

.opt-btn {
    background: #fff;
    width: 100%;
    height: 136rpx;
    border: none;
    padding: 0;
    border-radius: 0;
    padding-left: 36rpx;
}

.opt-btn::after {
    border: none;
}

.opt-item {
    display: flex;
    align-items: center;
    width: 100%;
    height: 135rpx;
    padding-right: 30rpx;
}

.opt-text {
    color: #353535;
    font-size: 32rpx;
}

.opt-text-padding {
    margin-left: 12rpx;
}

.opt-checked {
    width: 32rpx;
    height: 32rpx;
    position: absolute;
    right: 36rpx;
    top: 50%;
    transform: translateY(-50%);
}

.opt-loading {
    line-height: 32rpx;
    position: absolute;
    right: 36rpx;
    background-color: transparent;
    padding: 0rpx;
}

.line {
    background: #e6e6e6;
    height: 1rpx;
    width: 100%;
}

.sendBtnBg {
    width: 100%;
    background-color: #fff;
    position: fixed;
    top: 100%;
    left: 100%;
    transform: translate(-100%,-100%);
}

.sendBtn {
    margin: 30rpx 40rpx;
    width: 670rpx;
    height: 92rpx;
    line-height: 92rpx;
    color: #fff;
    background-color: #2E68F8;
    border-radius: 8rpx;
}

.copyBtn {
    margin: 30rpx 40rpx;
    width: 670rpx;
    height: 92rpx;
    line-height: 92rpx;
    color: #353535;
    border: 3rpx solid #E2E2E2;
    background-color: #FAFAFA;
    border-radius: 8rpx;
}

.copyBtnHover {
    background-color: #F0F0F0;
}

.sendTip {
    margin-top: 30rpx;
    margin-bottom: 48rpx;
    text-align: center;
    font-size: 28rpx;
    color: #979797;
    letter-spacing: -0.68px;
}

.error-text {
    font-size: 32rpx;
    color: #979797;
    width: 100%;
    text-align: center;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
}

@import "../../app.wxss";