.wrapper {
    height: 100%;
    text-align: center;
}

.icon {
    margin-top: 104rpx;
    width: 200rpx;
    height: 200rpx;
}

.title {
    margin-top: 76rpx;
    color: #353535;
    font-size: 40rpx;
}

.tip {
    width: 100%;
    margin-top: 12rpx;
    color: #979797;
    font-size: 32rpx;
    text-align: center;
}

.tip-name {
    display: inline-block;
    max-width: 80%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    line-height: 100%;
}

.btn {
    margin: 0 40rpx;
    background: #2E68F8;
    border-radius: 8rpx;
    font-size: 36rpx;
    color: #FFFFFF;
    text-align: center;
}

.btnHover {
    background-color: #295DDE;
}

.returnBtn {
    margin: 30rpx 40rpx 0 40rpx;
    background: #fafafa;
    border: 3rpx solid #E2E2E2;
    border-radius: 8rpx;
    font-size: 36rpx;
    color: #353535;
    text-align: center;
}

.returnBtnHover {
    background-color: #F0F0F0;
}

.bottom {
    margin-top: 165rpx;
}