.root {
    display: flex;
    flex-direction: column;
}

.avatar {
    width: 200rpx;
    height: 200rpx;
    margin-top: 100rpx;
    margin-bottom: 8rpx;
    border-radius: 50%;
    align-self: center;
    background-color: #f0f0f0;
}

.name {
    font-size: 32rpx;
    color: #353535;
    text-align: center;
}

.main-text {
    font-size: 42rpx;
    color: #353535;
    text-align: center;
    margin: 80rpx 90rpx 30rpx 90rpx;
}

.sub-text {
    font-size: 32rpx;
    color: #979797;
    text-align: center;
    margin: 0rpx 90rpx 120rpx 90rpx;
}

.allow-btn {
    margin: 0rpx 40rpx 0rpx 40rpx;
    background: #2E68F8;
    border-radius: 8rpx;
    font-size: 36rpx;
    color: #FFFFFF;
    text-align: center;
}

.allowBtnHover {
    background-color: #295DDE;
}

.allowed-disabled-btn {
    margin: 0rpx 40rpx 0rpx 40rpx;
    background: #656565;
    border-radius: 8rpx;
    font-size: 36rpx;
    color: #FFFFFF;
    text-align: center;
}

.return-btn {
    margin: 30rpx 40rpx 0rpx 40rpx;
    background: #fafafa;
    border: 3rpx solid #E2E2E2;
    border-radius: 8rpx;
    font-size: 36rpx;
    color: #353535;
    text-align: center;
}

.returnBtnHover {
    background-color: #F0F0F0;
}

.error_container {
    position: absolute;
    top: 0rpx;
    bottom: 0rpx;
    left: 0rpx;
    right: 0rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}

.error_image {
    width: 300rpx;
    height: 300rpx;
    margin-top: 180rpx;
}

.error_text {
    text-align: center;
}

.error_title {
    font-size: 40rpx;
    color: #353535;
    margin-top: 40rpx;
}

.bottom_button {
    width: 670rpx;
    height: 92rpx;
    border-radius: 8rpx;
    margin-bottom: 30rpx;
}

.blue_button {
    background: #2E68F8;
    color: #FFF;
}

.retry_button {
    margin-top: 120rpx;
    margin-bottom: 0rpx;
}

.back_main_text_container {
    flex: auto;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
}

.back_main_text {
    height: 136rpx;
    line-height: 136rpx;
    color: #2E68F8;
    font-size: 28rpx;
    text-align: center;
}