page {
    background: #9F2D24;
}

.wrapper {
    text-align: center;
}

.logo {
    width: 207rpx;
    height: 30rpx;
    margin-top: 46rpx;
}

.dinner {
    width: 590rpx;
    height: 590rpx;
    margin-top: 46rpx;
}

.time {
    width: 260rpx;
    height: 77rpx;
    margin-top: 7rpx;
}

.item-list {
    width: 590rpx;
    text-align: center;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin: 40rpx auto 30rpx auto;
}

.item {
    width: 278rpx;
    height: 84rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    background-size: 100%;
    background-repeat: no-repeat;
    background-image: url(https://qn.cache.wpscdn.cn/wxminiprogram/application/red-bg2.png);
}

.item-share {
    width: 590rpx;
    height: 100rpx;
    text-align: center;
    margin-bottom: 30rpx;
    overflow: hidden;
    background-size: 100%;
