<view>
    <view class="topbar_bottom"></view>
    <view class="recentSearchedRecordsClz" wx:if="{{searchingName.length==0}}">
        <view bindtap="tapRecentSearchedRecord" class="recentSearchedRecordClz" data-index="{{index}}" wx:for="{{recentSearchedRecords}}" wx:key="{{index.name}}">
            <view>
                <image class="recent-searched-record-icon" mode="aspectFit" src="../../libs/img/clock.png"></image>
            </view>
            <view class="recent-searched-record-text">
                <text>{{item.name}}</text>
            </view>
            <hair-line class="line"></hair-line>
        </view>
        <view bindtap="tapClearRecentSearchedRecords" class="recentSearchedRecordClz" wx:if="{{recentSearchedRecords.length!=0}}">
            <view>
                <image class="recent-searched-record-icon" mode="aspectFit" src="../../libs/img/delete.png"></image>
            </view>
            <view class="recent-searched-record-clear-text">
                <text>清除搜索记录</text>
            </view>
        </view>
    </view>
    <view class="searchedRecordsClz" wx:else>
        <file-list bind:filetapevent="fileItemTap" bind:loadStatus="onloadStatusChange" id="filelist" showOperate="{{true}}" type="search">
            <view class="no-search-result" wx:if="{{showNoSearchResult}}">
                <image class="no-search-result-icon" mode="aspectFit" src="https://qn.cache.wpscdn.cn/wxminiprogram/errors/noSearchResult2.png"></image>
                <view class="no-search-result-title">没有找到文件名为"{{searchingName}}"的文件</view>
            </view>
        </file-list>
    </view>
    <view class="topbar">
        <search-button bind:searchNameChanged="searchNameChanged" bind:searchNameConfirmed="searchNameConfirmed" inputText="{{inputText}}"></search-button>
    </view>
</view>
