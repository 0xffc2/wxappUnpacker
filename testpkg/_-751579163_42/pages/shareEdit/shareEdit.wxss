.title-item {
    height: 180rpx;
    display: flex;
    align-items: center;
}

.title-icon {
    height: 72rpx;
    margin-left: 36rpx;
    margin-right: 24rpx;
}

.title-name {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    margin-right: 36rpx;
}

.header {
    height: 60rpx;
    line-height: 60rpx;
    background-color: #f5f5f5;
    vertical-align: middle;
}

.header-text {
    font-size: 24rpx;
    color: #9B9B9B;
    margin-left: 36rpx;
}

.members-container {
    background-color: white;
}

.no-members {
    margin: 320rpx 40rpx 0 40rpx;
    text-align: center;
}

.no-members-text {
    font-size: 32rpx;
    color: rgba(151,151,151,1);
}

.member-item {
    width: 100%;
    height: 120rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin: 0 36rpx 0 36rpx;
}

.name {
    font-size: 32rpx;
    color: #353535;
    flex: 2;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    word-wrap: normal;
}

.permission {
    font-size: 28rpx;
    color: rgba(151,151,151,1);
    margin: 0 16rpx 0 20rpx;
}

.arrow {
    width: 36rpx;
    height: 36rpx;
    margin-right: 36rpx;
}

.line {
    margin-left: 36rpx;
    height: 1rpx;
    background-color: #F5F5F5;
}

.bottom-align {
    width: 100%;
    background-color: #fff;
    position: fixed;
    top: 100%;
    left: 100%;
    transform: translate(-100%,-100%);
}

.sendBtn {
    margin: 30rpx 40rpx 0 0;
    width: 320rpx;
    height: 92rpx;
    line-height: 92rpx;
    color: #fff;
    background-color: #2E68F8;
    border-radius: 8rpx;
    display: inline-block;
}

.openBtn {
    margin: 30rpx 40rpx;
    width: 670rpx;
    height: 92rpx;
    line-height: 92rpx;
    color: #fff;
    background-color: #2E68F8;
    border-radius: 8rpx;
}

.otherBtn {
    margin: 30rpx 30rpx 0 40rpx;
    width: 320rpx;
    height: 92rpx;
    line-height: 92rpx;
    color: #353535;
    border: 3rpx solid #E2E2E2;
    background-color: #FAFAFA;
    border-radius: 8rpx;
    display: inline-block;
}

.copyBtnHover {
    background-color: #F0F0F0;
}

.setting-view {
    margin-top: 30rpx;
    margin-bottom: 48rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.setting-btn {
    font-size: 28rpx;
    color: #2E68F8;
    padding: 0 20rpx;
}

.expire-text {
    font-size: 28rpx;
    color: rgba(151,151,151,1);
}

.error-text {
    font-size: 32rpx;
    color: #979797;
    width: 100%;
    text-align: center;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
}

.page {
    padding-bottom: 280rpx;
}

@import "../../app.wxss";