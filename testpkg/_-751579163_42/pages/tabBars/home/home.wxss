.root {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background: #FFF;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
}

.user_container {
    width: 100%;
    height: 180rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.user_avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin-left: 36rpx;
    flex: none;
}

.user_name_container {
    margin-left: 36rpx;
    margin-right: 48rpx;
    flex: 1;
    overflow: hidden;
}

.user_switch_btn {
    font-size: 24rpx;
    font-family: SourceHanSansCN-Normal;
    font-weight: 400;
    color: rgba(53,53,53,1);
    width: 148rpx;
    height: 52rpx;
    line-height: 50rpx;
    border-radius: 4rpx;
    background-color: white;
    border: 1rpx solid rgba(226,226,226,1);
    padding: 0;
    margin-right: 36rpx;
    vertical-align: middle;
    text-align: center;
    flex: none;
}

.user_switch_btn_hover {
    background-color: rgba(240,240,240,1);
}

.user_name_member_layout {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.user_name {
    color: #353535;
    font-size: 32rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    flex: auto;
    flex-grow: 0;
}

.user_member {
    width: 28rpx;
    height: 28rpx;
    margin-left: 16rpx;
    flex: none;
}

.login_type {
    display: block;
    color: #979797;
    font-size: 24rpx;
    margin-top: 12rpx;
}

.divider {
    width: 100%;
    height: 40rpx;
    background: #F5F5F5;
}

.line {
    position: absolute;
    left: 122rpx;
    bottom: 0;
    right: 0;
    height: 1rpx;
    flex: none;
}

.item_container {
    position: relative;
    width: 100%;
    height: 120rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.item_img {
    width: 56rpx;
    height: 56rpx;
    margin-left: 36rpx;
}

.item_title {
    color: #353535;
    font-size: 32rpx;
    margin-left: 30rpx;
}

.item_right {
    flex: auto;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
}

.item_info {
    color: #979797;
    font-size: 28rpx;
    margin-right: 36rpx;
}

.user_time {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    margin-top: 12rpx;
}

.uses-day {
    color: #979797;
    font-size: 24rpx;
}

.users-image {
    margin-left: 10rpx;
    height: 40rpx;
    width: 40rpx;
}