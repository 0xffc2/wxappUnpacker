page {
    height: 100%;
    background: #F5F5F5;
}

.root {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #F5F5F5;
}

.card {
    position: relative;
    width: 694rpx;
    border-radius: 10rpx;
    margin-top: 28rpx;
    background: #FFF;
}

.card_hover {
    background-color: #fafafa;
}

.file_info {
    display: flex;
    align-items: center;
    width: 100%;
    height: 136rpx;
}

.header_icon {
    width: 48rpx;
    height: 48rpx;
    margin-left: 36rpx;
    margin-right: 24rpx;
    flex: none;
}

.recent_icon {
    width: 60rpx;
    height: 60rpx;
    margin-left: 36rpx;
    margin-right: 36rpx;
    flex: none;
}

.file_info_txt {
    flex: auto;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    word-wrap: normal;
    font-size: 32rpx;
    color: #353535;
    max-width: 502rpx;
}

.expired_layout {
    width: 100%;
    height: 313rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.expired_txt {
    font-size: 32rpx;
    color: #353535;
}

.expired_button {
    width: 320rpx;
    height: 92rpx;
    background: #2E68F8;
    font-size: 36rpx;
    color: #FFF;
    margin-top: 48rpx;
}

.button_hover {
    background-color: #0514D6;
}

.operate_layout {
    width: 100%;
    height: 212rpx;
    display: flex;
}

.operate_item {
    height: 100%;
    flex: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: transparent;
}

.operate_icon {
    width: 56rpx;
    height: 56rpx;
}

.operate_txt {
    font-size: 28rpx;
    color: #353535;
    margin-top: 20rpx;
    height: 40rpx;
    line-height: 40rpx;
}

.center {
    width: 100%;
    height: 191rpx;
    display: flex;
    align-items: center;
}

.center_icon {
    width: 104rpx;
    height: 104rpx;
    margin-left: 36rpx;
}

.center_right {
    display: flex;
    flex-direction: column;
    margin-left: 48rpx;
}

.center_right_title {
    font-size: 32rpx;
    color: #353535;
    height: 45rpx;
    line-height: 45rpx;
}

.center_right_desc {
    font-size: 28rpx;
    color: #979797;
    height: 40rpx;
    line-height: 40rpx;
}

.bottom {
    width: 100%;
    height: 88rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.bottom_line {
    position: absolute;
    left: 0;
    right: 0;
}

.bottom_txt {
    font-size: 28rpx;
    color: #2E68F8;
}

.bottom_icon {
    margin-left: 8rpx;
    width: 36rpx;
    height: 36rpx;
}

.recent_title {
    margin-left: 35rpx;
    height: 88rpx;
    line-height: 88rpx;
    font-size: 32rpx;
    color: #979797;
}

.recent_item {
    display: flex;
    align-items: center;
    width: 100%;
    height: 120rpx;
}

.recent_line {
    position: absolute;
    left: 35rpx;
    right: 0;
}

.recent_empty {
    width: 100%;
    height: 360rpx;
    line-height: 360rpx;
    text-align: center;
    font-size: 28rpx;
    color: #979797;
}

.recent_login {
    width: 100%;
    height: 568rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.recent_login_icon {
    width: 200rpx;
    height: 200rpx;
}

.recent_login_txt {
    font-size: 32rpx;
    color: #353535;
    margin-top: 48rpx;
}

.recent_login_button {
    margin-top: 55rpx;
}

.margin_bottom {
    margin-bottom: 48rpx;
}

.more-contacts-layout {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 60rpx 0 64rpx 0;
}

.less-contacts-layout {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 64rpx 0;
}

.contacts-container {
    display: flex;
    flex-direction: row-reverse;
}

.contact-image {
    width: 72rpx;
    height: 72rpx;
    border-radius: 50%;
    border: 5rpx solid #fff;
}

.new-group-text {
    font-size: 28rpx;
    color: rgba(53,53,53,1);
}

.new-group-tip {
    margin-top: 60rpx;
    margin-bottom: 40rpx;
}

.invite-friend-tip {
    margin-top: 48rpx;
    margin-bottom: 56rpx;
}

.unlogin-new-group-tip {
    margin-top: 50rpx;
    margin-bottom: 40rpx;
}

.less-contacts-image {
    width: 200rpx;
    height: 200rpx;
    align-self: center;
}

.new_group_title {
    height: 88rpx;
    line-height: 88rpx;
    vertical-align: middle;
    font-size: 32rpx;
    color: rgba(151,151,151,1);
    margin-left: 36rpx;
}

.new-group-btn {
    width: 320rpx;
    height: 92rpx;
    line-height: 92rpx;
    background: rgba(46,104,248,1);
    border-radius: 8rpx;
    font-size: 36rpx;
    color: rgba(255,255,255,1);
}

.relationship-layout {
    display: flex;
    flex-direction: row;
}

.relationship-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0 40rpx;
}

.team-icon {
    width: 100rpx;
    height: 100rpx;
    display: block;
}

.relation-tip {
    font-size: 28rpx;
    color: rgba(151,151,151,1);
    margin-top: 30rpx;
}

.clz_bind_phone_guide_container {
    width: 100%;
    margin-top: 45rpx;
    position: relative;
    height: 279rpx;
}

.clz_bind_phone_guide {
    background: rgba(255,255,255,1);
    border-radius: 10rpx;
    top: 0;
    bottom: 0;
    left: 28rpx;
    right: 28rpx;
    position: absolute;
}

.clz_bind_phone_icon {
    position: absolute;
    top: 54rpx;
    left: 36rpx;
    width: 104rpx;
    height: 104rpx;
}

.clz_bind_phone_title {
    position: absolute;
    top: 58rpx;
    left: 188rpx;
    height: 45rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(53,53,53,1);
    line-height: 45rpx;
}

.clz_bind_phone_msg {
    position: absolute;
    top: 103rpx;
    left: 188rpx;
    height: 40rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(151,151,151,1);
    line-height: 40rpx;
}

.clz_bind_phone_btn {
    position: absolute;
    top: 191rpx;
    left: 0;
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(46,104,248,1);
    background: transparent;
}

.clz_bind_phone_line {
    position: absolute;
    top: 193rpx;
    width: 100%;
    height: 1rpx;
}

@import "../../app.wxss";