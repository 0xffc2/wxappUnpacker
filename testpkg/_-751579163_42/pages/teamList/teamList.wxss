.item {
    width: 100%;
    height: 136rpx;
    display: flex;
    align-items: center;
}

.item_icon {
    flex: none;
    width: 72rpx;
    height: 72rpx;
    margin-left: 36rpx;
}

.item_text {
    flex: auto;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    word-wrap: normal;
    font-size: 32rpx;
    color: #353535;
    margin-left: 24rpx;
}

.new_team_divider {
    width: 100%;
    height: 40rpx;
    background: #F5F5F5;
}

.line {
    position: absolute;
    left: 44rpx;
    right: 0rpx;
}

.empty {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #FFFFFF;
}

.empty_icon {
    width: 300rpx;
    height: 300rpx;
    margin-top: 180rpx;
}

.empty_title {
    font-size: 40rpx;
    color: #353535;
    margin-top: 40rpx;
}

.empty_desc {
    font-size: 32rpx;
    color: #979797;
    margin-top: 12rpx;
}

button {
    width: 670rpx;
    height: 92rpx;
    border-radius: 8rpx;
    background: #2E68F8;
    font-size: 36rpx;
    color: #FFFFFF;
    margin-top: 62rpx;
}

.button_hover {
    background-color: #0514D6;
}