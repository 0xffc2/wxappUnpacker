page {
    font-size: 30rpx;
    height: 100%;
}

.clz-title-folder-header-container {
    margin-top: 60rpx;
    display: flex;
    padding-left: 40rpx;
    padding-right: 40rpx;
    align-items: center;
    justify-content: center;
}

.clz-title-folder-header {
    color: #353535;
    font-size: 40rpx;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    font-family: 'PingFangSC';
    font-weight: 'bold';
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding: 0;
}

.clz-title-folder-header-subtitle {
    color: #979797;
    font-size: 32rpx;
    height: 30rpx;
    line-height: 30rpx;
    display: block;
    text-align: center;
    margin-top: 20rpx;
    font-family: 'PingFangSC';
    font-weight: 'Regular';
}

.clz-btn-share-folder-container {
    display: flex;
    justify-content: center;
}

.clz-btn-share-folder {
    margin-top: 48rpx;
    margin-bottom: 52rpx;
    padding-left: 40rpx;
    padding-right: 40rpx;
    display: block;
    text-align: center;
    height: 72rpx;
    line-height: 72rpx;
    color: white;
    font-size: 32rpx;
    background-color: #2E68F8;
    border-radius: 8rpx;
    box-sizing: border-box;
    font-family: 'PingFangSC';
    font-weight: 'Regular';
}

.clz-btn-share-folder-hover {
    background-color: #295DDE;
}

.seperate {
    width: 100%;
    height: 40rpx;
    background: #F5F5F5;
}

.wrapper {
    height: 100%;
    position: relative;
}

.empty {
    width: 100%;
    text-align: center;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    font-size: 30rpx;
    color: #979797;
}

.float-btn {
    position: fixed;
    z-index: 1;
    right: 36rpx;
    bottom: 36rpx;
}

.error_container {
    position: absolute;
    top: 0rpx;
    bottom: 0rpx;
    left: 0rpx;
    right: 0rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}

.error_image {
    width: 300rpx;
    height: 300rpx;
    margin-top: 180rpx;
}

.error_text {
    text-align: center;
}

.error_title {
    font-size: 40rpx;
    color: #353535;
    margin-top: 40rpx;
}

.error_desc {
    font-size: 32rpx;
    color: #979797;
    margin-top: 10rpx;
}

.bottom_button {
    width: 670rpx;
    height: 92rpx;
    border-radius: 8rpx;
    margin-bottom: 30rpx;
}

.blue_button {
    background: #2E68F8;
    color: #FFF;
}

.retry_button {
    margin-top: 120rpx;
    margin-bottom: 0rpx;
}