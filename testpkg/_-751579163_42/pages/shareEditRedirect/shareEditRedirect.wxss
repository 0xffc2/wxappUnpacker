.bottom_button {
    width: 670rpx;
    height: 92rpx;
    border-radius: 8rpx;
    margin-bottom: 30rpx;
}

.blue_button {
    background: #2E68F8;
    color: #FFF;
}

.retry_button {
    margin-top: 120rpx;
    margin-bottom: 0rpx;
}

.error_container {
    position: absolute;
    top: 0rpx;
    bottom: 0rpx;
    left: 0rpx;
    right: 0rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}

.error_image {
    width: 300rpx;
    height: 300rpx;
    margin-top: 180rpx;
}

.link_closed_image {
    width: 200rpx;
    height: 200rpx;
    margin-top: 160rpx;
    margin-bottom: 48rpx;
}

.error_text {
    text-align: center;
}

.error_title {
    font-size: 40rpx;
    color: #353535;
    margin-top: 40rpx;
}

.error_link_closed {
    font-size: 36rpx;
    color: #353535;
}

.error_desc {
    font-size: 32rpx;
    color: #979797;
    margin-top: 10rpx;
}

.back_main_text_container {
    flex: auto;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
}

.back_main_text {
    height: 136rpx;
    line-height: 136rpx;
    color: #2E68F8;
    font-size: 28rpx;
    text-align: center;
}