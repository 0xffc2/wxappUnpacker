@import "../../app.wxss";

.page {
    padding-bottom: 160rpx;
}

.empty {
    width: 100%;
    text-align: center;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    font-size: 30rpx;
    color: #979797;
}

.bottomBtnContainer {
    width: 100%;
    height: 152rpx;
    background-color: #FFFFFF;
    position: fixed;
    top: 100%;
    left: 100%;
    transform: translate(-100%,-100%);
}

.bottomBg {
    margin: 30rpx 25rpx;
}

.bttomBtnView {
    display: inline-block;
}

.submitBtn {
    height: 92rpx;
    margin-left: 15rpx;
    margin-right: 15rpx;
    color: white;
    background-color: #2E68F8;
    border-radius: 8rpx;
}

.tips {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    font-size: 32rpx;
    color: #979797;
}